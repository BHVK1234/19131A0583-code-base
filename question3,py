def NthSmallest(K):
    Q = []
    for i in range(1,10):
        Q.append(i)
    for i in range(1,K+1):
        x = Q[0]
        Q.remove(Q[0])
        if (x % 10 != 0):
            Q.append(x * 10 + x % 10 - 1)
        Q.append(x * 10 + x % 10)
        if (x % 10 != 9):
            Q.append(x * 10 + x % 10 + 1)
    return x
num=int(input())
print(NthSmallest(num))
